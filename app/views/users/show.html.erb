<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>

  
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <P>Opinion</P>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>

<div>
    <%="Title" %>
    <%="Opinion" %>
</div>

<% @books.each do |book| %>
<div>
  <%= link_to user_path(@user) do %>
  <%= image_tag @user.get_profile_image(100,100)  %>
  <% end %>

    <%= link_to book.title, book_path(book.id)  %>
    <%= book.body %>

<% end %>
</div>
