<div class="row ">
  <div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <th scope="row">name </th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th scope="row">introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
      </table>
      <a class="btn btn-outline-secondary btn-block" href="<%= user_path(current_user) %>">
       <i class="fa-solid fa-user-gear text-center"></i>
      </a>

   
    <h2>New book</h2>
    <%= form_with model: @book do |f| %>
      <P>Title</P>
      <%= f.text_field :title %>
      <P>Opinion</P>
      <%= f.text_area :body %>
      <div class="p-3">
      <button class="btn btn-success" type="submit">Create Book</button>
      </div>
    <% end %>
  </div>
  
  <div class="offset-md-1"></div>
  <div class="col-md-8">
    <h2>Books</h2>

  <table class="table">
   <thead>
     <tr>
      <th scope="col-md-3"></th>
      <th scope="col-md-4">Title</th>
      <th scope="col-md-5">Opinion</th>
     </tr>
  </thead>
  <% @books.each do |book| %>
  
  <tbody>
    <tr>
      <td> <%= link_to user_path(@user) do %>
      <%= image_tag @user.get_profile_image(100,100)  %></td>
      <td> <%= link_to book.title, book_path(book.id)  %></td>
      <td> <%= book.body %></td>
    </tr>
  </tdoby>　　　 
   <% end %><% end %>
  </table>
 </div>
</div>