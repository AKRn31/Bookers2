<%= render 'sidebar', book: @book, user: @user %>

<div class="offset-md-1"></div>
  <div class="col-md-8">
    <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td> <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(200,100) %>
              <br><%=  @user.name %></br>
         　    <% end %> </td>
            <td ><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
              <% if @user == current_user %>
            <td> <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success btn-sm", role: "button" %></td>
            <td>  <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger btn-sm", role: "button" %></td>
              <% end %>
          </tr>　　　 
        </tbody> 
      </table>
  </div>

