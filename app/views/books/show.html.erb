<div><%= flash[:notice] %></div>
<%= render 'sidebar', book: @book %>

<h1>Book detail</h1>
  <%= image_tag @user.get_image %>
  <p><%= link_to @user.name, books_path %></p>
  <p><%= link_to @book.title, book_path %></p>
  <%= @book.body %>
  <% if @book.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@book) %></p>
    <P><%= link_to "Destroy", book_path(@book), method: :delete %> </P>
    
  <% end %>




