<%= render 'sidebar', book: @book %>

<h1>Book detail</h1>
  <%= image_tag @book.get_image %>
  <p><%= link_to @book.name, books_path %></p>
  <p><%= link_to @books.title, book_path %></p>
  <%= @books.body %>
  <% if @books.user == current_user %>
    <p><%= link_to "Edit", edit_book_path(@books) %></p>
    <p><%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" =>"本当に消しますか？" %></p>
  <% end %>




