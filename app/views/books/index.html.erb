<h1>User info</h1>
<%= image_tag @user.get_image %>
<p>name <%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

  
<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <P>Opinion</P>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
  <div>Title</div>
  <div>Opinion</div>
  <% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <%= link_to book.title, book_path(book.id) %>
    <%= book.body %>
  </div>
  <% end %>
  