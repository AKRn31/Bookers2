<h1>User info</h1>
<%= image_tag current_user.get_image %>
<p>name <%= current_user.name %></p>
<p>introduction <%= current_user.introduction %></p>
<% if current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
  <% end %>

  
<h1>New book</h1>
<%= form_with model: book do |f| %>
  <P>Title</P>
  <%= f.text_field :title %>
  <P>Opinion</P>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>