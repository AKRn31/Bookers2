  <%= book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
        <%= image_tag book.user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th scope="row">name </th>
            <th><%= book.user.name %></th>
          </tr>
          <tr>
            <th scope="row">introduction </th>
            <th><%= book.user.introduction %></th>
          </tr>
        </table>
          
        <% if @user %>
        <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(user) %>">
          <i class="fa-solid fa-user-gear text-center"></i>
　　　　</a>
        <% end %>

      <div class="mt-3">
        <h2>New book</h2>
          <%= form_with model: book do |f| %>
          <P>Title</P>
          <input class="form-control " type="text" >
            <%= f.text_field :title %> </input>
            <P>Opinion</P>
           <textarea class="form-control" aria-label="With textarea"></textarea>
            <%= f.text_area :body %></input>
            
      </div>
      <button class="btn btn-success" type="submit">Create Book</button>
        <% end %>
    </div>