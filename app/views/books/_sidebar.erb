  <%= book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <table class="table">
          <tr>
            <th scope="row">name </th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th scope="row">introduction </th>
            <th><%= current_user.introduction %></th>
          </tr>
        </table>
          
        <% if current_user %>
        <a class="btn btn-outline-secondary btn-block"  href="<%= edit_user_path(current_user) %>">
          <i class="fa-solid fa-user-gear text-center"></i>
　　　　</a>
        <% end %>

      <div class="mt-3">
        <h2>New book</h2>
          <%= form_with model: book do |f| %>
          
            <P>Title</P>
            <%= f.text_field :title %>
            <P>Opinion</P>
            <%= f.text_area :body %>
      </div>
          <button class="btn btn-success" type="submit">Create Book</button>
        <% end %>
    </div>